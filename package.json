{
	"name": "website",
	"version": "1.0.0",
	"description": "Personal website of Germán Freixinós López, front-end web developer.",
	"keywords": [
		"11ty-website",
		"blog",
		"eleventy-site",
		"eleventy-website",
		"eleventy",
		"frontend-developer",
		"frontend-web-developer",
		"frontend-web",
		"frontend",
		"jamstack-site",
		"jamstack",
		"netlify",
		"personal-website",
		"portfolio-page",
		"portfolio-site",
		"portfolio-website",
		"portfolio",
		"potfolioweb",
		"static-site",
		"website"
	],
	"homepage": "https://github.com/germanfrelo/website#readme",
	"bugs": {
		"url": "https://github.com/germanfrelo/website/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/germanfrelo/website.git"
	},
	"license": "ISC",
	"author": "Germán Freixinós López",
	"main": ".eleventy.js",
	"scripts": {
		"build": "eleventy",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint:css": "stylelint --formatter verbose --max-warnings 0 \"**/*.css\"",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:js": "eslint --max-warnings 0 .",
		"lint:js:fix": "npm run lint:js -- --fix",
		"prepare": "husky install",
		"sort-package-json": "sort-package-json",
		"start": "eleventy --serve"
	},
	"lint-staged": {
		"package.json": [
			"sort-package-json",
			"prettier --write"
		],
		"*.css": [
			"stylelint --formatter verbose --max-warnings 0",
			"prettier --write"
		],
		"*.js": [
			"eslint --max-warnings 0",
			"prettier --write"
		],
		"**/!(package.json|*.css|*.js)": [
			"prettier --write --ignore-unknown"
		]
	},
	"devDependencies": {
		"@11ty/eleventy": "2.0.1",
		"eslint": "8.55.0",
		"eslint-config-prettier": "8.8.0",
		"husky": "8.0.3",
		"lint-staged": "13.2.2",
		"prettier": "2.8.8",
		"prettier-plugin-multiline-arrays": "1.1.3",
		"sort-package-json": "2.6.0",
		"stylelint": "15.6.2",
		"stylelint-config-recess-order": "4.4.0",
		"stylelint-config-standard": "33.0.0"
	}
}
